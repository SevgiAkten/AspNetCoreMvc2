@page
@model AspNetCoreMvc2.Introduction.Pages.Studentp.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
</head>
<body>
	<h1>Students</h1>
	<table>
		<tr>
			<th>Id</th>
			<th>FirstName</th>
			<th>LastName</th>
			<th>Email</th>
		</tr>
		@foreach (var student in Model.Students)
		{
			<tr>
				<td>@student.Id</td>
				<td>@student.FirstName</td>
				<td>@student.LastName</td>
				<td>@student.Email</td>
			</tr>
		}
	</table>
	<form method="post">
		First Name: <input asp-for="Student.FirstName" />
		Last Name: <input asp-for="Student.LastName" />
		Email: <input asp-for="Student.Email" />
		<input type="submit" />
	</form>
</body>
</html>
