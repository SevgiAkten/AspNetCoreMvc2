	<p>@DateTime.Now </p>
	@{var date = DateTime.Now - TimeSpan.FromDays(3);}
	<p>3 days  ago was @date </p>
	@{
		var number = 10;
	}
	<p>@number</p>
	@if (number < 10)
	{
		<p>Your number is less than 10</p>
	}
	else if (number == 10)
	{
		<p>Your number is 10</p>
	}
	else
	{
		<p>Your number is greater than 10</p>
	}

	@switch (value)
	{
		case 10:
			<p>Your number is 10</p>
			break;
		case 11:
			<p>Your number is 11</p>
			break;
		case 12:
			<p>Your number is 12</p>
			break;
		default:
			<p>I have no idea about the number</p>

			break;
	}
	
	<br />FOR
	@for (int i = 0; i < Model.Employees.Count; i++)
	{
		<br /><b>@Model.Employees[i].FirstName</b>
	}

	<br />WHILE
	@{ var counter = 0;}
	@while (counter < Model.Employees.Count)
	{
		<br /><b>@Model.Employees[counter].FirstName</b>
		counter++;
	}

	<br />DO WHILE
	@{ var counter2 = 0;}
	@do
	{
		<br /><b>@Model.Employees[counter2].FirstName</b>
		counter2++;
	} while (counter2 < Model.Employees.Count);

